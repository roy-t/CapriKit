# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
end_of_line = crlf
insert_final_newline = true
indent_style = space
charset = utf-8

[*.csproj, *.props, *.xml]
# Indentation and spacing
indent_size = 2
tab_width = 2

# C# files
[*.cs]
indent_size = 4
tab_width = 4
